<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <LinearLayout
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="446dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.342">

        <TextView
            android:id="@+id/tv"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:text="Enter the number of intervals"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et1"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxLength="2"
            android:textColor="#2196F3"
            android:textColorLink="#03403D3D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="280dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="277dp"
            android:layout_height="57dp"
            android:text="Enter the starting and ending positions 'x' and 'y' for each inteval"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et2"
            android:hint=" 'X' must be less than 'Y'"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#2196F3"
            android:textColorLink="#474343" />

        <Button
            android:id="@+id/button"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:text="go" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:textColor="#EC1313"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>